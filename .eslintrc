{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "max-len": [1, 300, 2, { "ignoreComments": true }],
    "no-console": "off",
    "no-shadow": ["error", { "builtinGlobals": false, "hoist": "functions", "allow": [] }],
    "linebreak-style": ["error", "windows"],
    "no-alert": "off",
    "no-use-before-define": 0,
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "func-names": [0, "always"]
  }
}
